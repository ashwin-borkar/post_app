<%= render "pages/home"%>

<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%#= raise @post.inspect %>
  <%= @post.user.email %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Image:</strong>
  <%= @post.image.attached? %>
<p >image:
<%= image_tag @post.image,  style: "width:50%" if @post.image.attached?%>
</p>
</p>

<p>
  <strong>Short desc:</strong>
  <%= @post.short_desc %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
